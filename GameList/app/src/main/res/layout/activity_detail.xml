<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:paddingBottom="40dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    tools:context=".activities.detail.DetailActivity">

                    <ImageView
                        android:id="@+id/image_profile"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        tools:src="@drawable/ic_launcher_foreground" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:letterSpacing=".12"
                        android:padding="10dp"
                        android:textAlignment="center"
                        android:textColor="@color/green_216"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        tools:text="Minecraft" />

                    <TextView
                        android:id="@+id/score"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:padding="10dp"
                        android:textAlignment="center"
                        android:textColor="@color/red_AD3"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        tools:text="5" />

                    <LinearLayout
                        android:id="@+id/controls"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/gray_FAF"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/minus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:src="@drawable/ic_minus" />

                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/genre_image"
                                android:layout_width="wrap_content"
                                android:layout_height="70dp"
                                tools:src="@drawable/ic_adventure_foreground" />

                            <TextView
                                android:id="@+id/genre_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                tools:text="ADVENTURE" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/plus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:src="@drawable/ic_plus" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/detail_description_text"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="asdasdw hasdhwai iawdhuwaidh aiuwdhiad auiwdhiawd iawdhuaid aiwdihd aiuwdhaid"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        android:textStyle="italic" />
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/purple_380"
            android:orientation="vertical">

            <TextView
                android:id="@+id/is_free"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:letterSpacing=".15"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold|italic"
                tools:text="Free" />

            <TextView
                android:id="@+id/webpage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:letterSpacing=".15"
                android:textColor="@color/gray_FAF"
                android:textSize="13sp"
                android:textStyle="bold|italic"
                tools:text="back4blood.com" />
        </LinearLayout>
    </RelativeLayout>

</layout>